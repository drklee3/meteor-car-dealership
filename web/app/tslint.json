{
    "extends": ["tslint-config-airbnb", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "double",
            "jsx-double",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "curly": true,
        "object-curly-spacing": [
            true,
            "never"
        ],
        "array-bracket-spacing": [
            true,
            "never"
        ]
    }
}
